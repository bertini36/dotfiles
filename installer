sudo apt update -y
echo "Ubuntu updated!"

# ubuntu apps installation
sudo apt install $(cat linux/apt/apt-installed.txt | grep "^[^#;]")
echo "Ubuntu apps installed!"

# snap installer
sudo apt install snap

# spotify
sudo snap install spotify
echo "Spotify installed!"

# pycharm
sudo snap install pycharm-professional --classic
echo "Pycharm installed!"

# idea
sudo snap install intellij-idea-community --classic
echo "Idea installed!"

# telegram
sudo snap install telegram-desktop
echo "Telegram installed!"

# dropbox
cd ~ && wget -O - "https://www.dropbox.com/download?plat=lnx.x86_64" | tar xzf -
~/.dropbox-dist/dropboxd
echo "Dropbox installed!"

# slack
# Upload it from slack.com or
sudo dpkg -i ~/.dotfiles/bin/slack-desktop-4.9.1-amd64.deb
# echo "Slack installed!"

# docker
sudo snap install docker
# Install last version of Docker Compose
# sudo curl -L "https://github.com/docker/compose/releases/download/x.y.z/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
# sudo chmod +x /usr/local/bin/docker-compose

# bat https://github.com/sharkdp/bat
sudo dpkg -i ~/.dotfiles/bin/bat_0.15.4_amd64.deb
echo "Bat installed!"

# exa https://github.com/ogham/exa
curl https://sh.rustup.rs -sSf | sh
sudo apt install -y cargo
cargo install exa

# pyenv https://github.com/pyenv/pyenv
curl https://pyenv.run | bash

# python apps installation
sudo apt install python3-pip
pip3 install -r ~/.dotfiles/langs/python/requirements.txt
echo "Python apps installed!"

# zsh https://github.com/zsh-users/zsh
sudo apt install zsh

# ohmyzsh https://github.com/ohmyzsh/ohmyzsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# zsh syntax hightlighting https://github.com/zsh-users/zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting

# zsh autosuggestion https://github.com/zsh-users/zsh-autosuggestions
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions

# zsh z https://github.com/agkozak/zsh-z
git clone https://github.com/agkozak/zsh-z ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-z

# make zsh default sh
chsh -s $(which zsh)

# Node
sudo apt install nodejs
sudo apt install npm
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.36.0/install.sh | bash

# create symbolic links
sudo sh ~/.dotfiles/symlinks/links.sh
echo "Symbolic links created!"

# Copy fonts
mkdir ~/.fonts
cp -a ~/.dotfiles/linux/fonts/. ~/.fonts

# generate folders structure
mkdir ~/code/ && cd "$_"
git clone git@github.com:bertini36/bertini36.github.io.git
git clone git@github.com:bertini36/boatsandjoy.git
git clone git@github.com:bertini36/quicopou.git